{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noVar": "error",
        "useImportType": "error"
      },
      "correctness": {
        "noUndeclaredVariables": "error"
      }
    }
  },
  "files": {
    "ignore": ["dist", "node_modules"]
  }
}
